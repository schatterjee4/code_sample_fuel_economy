<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.interview.vaporstream.fueleconomy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/pump_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".FuelEconomyApplication">

        <receiver android:name=".receiver.NetworkAvailabilityReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.SavedVehicleListActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SelectVehicleActivity"
                  android:label="@string/activity_select_vehicle_title"
                  android:theme="@style/AppTheme"
                  android:parentActivityName=".activity.SavedVehicleListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.SavedVehicleListActivity" />

        </activity>

        <activity android:name=".activity.VehicleInfoActivity"
                  android:label="@string/activity_vehicle_info_title"
                  android:theme="@style/AppTheme"
                  android:parentActivityName=".activity.SavedVehicleListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.SavedVehicleListActivity" />

        </activity>

    </application>
</manifest>
